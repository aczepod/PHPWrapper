<?xml version="1.0" encoding="UTF-8"?>
<ONTOLOGY
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="file:/Library/WebServer/Library/PHPWrapper/defines/Ontology.xsd">
    
    <!-- Edge object -->
    
    <UNIT>
        <TERM NS="" LID="_edges">
            <element variable="kTAG_LABEL">
                <item key="en">Edge</item>
            </element>
            <element variable="kTAG_DEFINITION">
                <item key="en"><![CDATA[An ontology edge <i>relates ontology nodes</i> via a predicate. Edges are represented by a triplet: <i>subject</i>, <i>predicate</i> and <i>object</i>, in which the subject and the object are ontology nodes and the predicate is an ontology term.]]></item>
            </element>
        </TERM>
        <NODE class="COntologyMasterVertex">
            <element variable="kTAG_CATEGORY">
                <item>Schema</item>
            </element>
        </NODE>
        <EDGE>
            <element variable="kTAG_PREDICATE">:SUBCLASS-OF</element>
            <element variable="kTAG_OBJECT">:ONTOLOGY:OBJECT</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_NID -->
    <UNIT>
        <NODE class="COntologyAliasVertex" term=":NID">
            <element variable="kTAG_PID">:_edges.:NID</element>
            <element variable="kTAG_KIND">
                <item>:KIND-FEATURE</item>
                <item>:KIND-SCALE</item>
            </element>
            <element variable="kTAG_TYPE">
                <item>:INT</item>
                <item>:COMPUTED</item>
                <item>:REQUIRED</item>
            </element>
            <element variable="kTAG_DESCRIPTION">
                <item key="en"><![CDATA[The <i>native identifier</i> of an edge is an <i>integer</i> <i>generated by a sequence</i> or <i>taken from a created graph edge identifier</i>.]]></item>
            </element>
        </NODE>
        <EDGE>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_GID -->
    <UNIT>
        <NODE class="COntologyAliasVertex" term=":GID">
            <element variable="kTAG_PID">:_edges.:NID</element>
            <element variable="kTAG_KIND">
                <item>:KIND-FEATURE</item>
                <item>:KIND-SCALE</item>
            </element>
            <element variable="kTAG_TYPE">
                <item>:TEXT</item>
                <item>:LOCKED</item>
                <item>:COMPUTED</item>
                <item>:REQUIRED</item>
            </element>
            <element variable="kTAG_DESCRIPTION">
                <item key="en"><![CDATA[The <i>global identifier</i> of an edge is computed by <i>concatenating</i> the <i>subject vertex native identifier</i>, the <i>predicate global identifier</i> and the <i>object vertex native identifier</i> separated by a slash.]]></item>
            </element>
        </NODE>
        <EDGE>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_CLASS -->
    <UNIT>
        <EDGE>
            <element variable="kTAG_SUBJECT">:CLASS</element>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_UID -->
    <UNIT>
        <EDGE>
            <element variable="kTAG_SUBJECT">:UID</element>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_SUBJECT -->
    <UNIT>
        <EDGE>
            <element variable="kTAG_SUBJECT">:SUBJECT</element>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_PREDICATE -->
    <UNIT>
        <EDGE>
            <element variable="kTAG_SUBJECT">:PREDICATE</element>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
    
	<!-- kTAG_OBJECT -->
    <UNIT>
        <EDGE>
            <element variable="kTAG_SUBJECT">:OBJECT</element>
            <element variable="kTAG_PREDICATE">:ATTRIBUTE-OF</element>
            <element variable="kTAG_OBJECT">:_edges</element>
        </EDGE>
    </UNIT>
</ONTOLOGY>
