    <!-- Control -->
    
    <UNIT>
        <TERM NS=":ONTOLOGY:ENUM" LID="CONTROL">
            <element variable="kTAG_LABEL">
                <item key="en">Control</item>
            </element>
            <element variable="kTAG_DEFINITION">
                <item key="en"><![CDATA[<i>Controls</i> are form elements used to display and modify attributes, this category groups all terms that define a display control.]]></item>
            </element>
        </TERM>
        <NODE class="COntologyMasterVertex">
            <element variable="kTAG_CATEGORY">
                <item>Enumerated set</item>
            </element>
        </NODE>
        <EDGE>
            <element variable="kTAG_PREDICATE">:SUBCLASS-OF</element>
            <element variable="kTAG_OBJECT">:ONTOLOGY:ENUM</element>
        </EDGE>
    </UNIT>
    
